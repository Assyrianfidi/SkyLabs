# Production Environment Configuration

# Database Configuration
DATABASE_URL=postgres://skylabs:${DB_PASSWORD}@${DB_HOST}:5432/skylabs_prod

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_COOKIE_NAME=skylabs.sid
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_MAX_AGE=86400000 # 1 day in milliseconds

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Security
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # Limit each IP to 100 requests per window

# Logging
LOG_LEVEL=info # error, warn, info

# Contact Form
CONTACT_EMAIL=fidi.amazon@gmail.com
VITE_NEXT_PUBLIC_CONTACT_EMAIL=fidi.amazon@gmail.com

# Feature Flags
ENABLE_MAILING=false

# Google reCAPTCHA (optional)
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
# VITE_NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Note: In production, sensitive values should be set as environment variables in your hosting platform.
# The actual values for ${DB_PASSWORD}, ${DB_HOST}, and ${SESSION_SECRET} should be provided at runtime.
