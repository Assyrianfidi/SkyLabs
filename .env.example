# Database Configuration
# Format: postgres://username:password@host:port/database_name
DATABASE_URL=postgres://postgres:yourpassword@localhost:5432/skylabs_db

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_COOKIE_NAME=skylabs.sid
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_MAX_AGE=86400000 # 1 day in milliseconds

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # Limit each IP to 100 requests per window

# Logging
LOG_LEVEL=debug # error, warn, info, debug

# Contact Form (server-side default)
CONTACT_EMAIL=contact@skylabs.dev

# Feature Flags
ENABLE_MAILING=false

# SMTP Configuration (if ENABLE_MAILING=true)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports
SMTP_USER=user@example.com
SMTP_PASS=your-email-password

# Google reCAPTCHA (optional)
# Server-side secret key (used by backend verification)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Client-side site key (exposed to browser) â€” Vite requires variables to start with VITE_
# Preferred key used by client code:
VITE_NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Public contact email for UI (optional, overrides CONTACT_EMAIL in the client)
VITE_NEXT_PUBLIC_CONTACT_EMAIL=contact@skylabs.dev

# Next.js-compatible public keys (in case of migration)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=${VITE_NEXT_PUBLIC_RECAPTCHA_SITE_KEY}
NEXT_PUBLIC_CONTACT_EMAIL=${VITE_NEXT_PUBLIC_CONTACT_EMAIL}

# Content Security Policy (CSP) Configuration
# Add any additional domains that need to be whitelisted for scripts, styles, etc.
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval' https://www.google.com/recaptcha/ https://www.gstatic.com/recaptcha/ https://replit.com
CSP_SCRIPT_SRC_ELEM='self' 'unsafe-inline' 'unsafe-eval' https://www.google.com/recaptcha/ https://www.gstatic.com/recaptcha/ https://replit.com
CSP_STYLE_SRC='self' 'unsafe-inline' 'unsafe-hashes' https://fonts.googleapis.com
CSP_STYLE_SRC_ELEM='self' 'unsafe-inline' https://fonts.googleapis.com
CSP_IMG_SRC='self' data: blob: https: http:
CSP_FONT_SRC='self' https://fonts.gstatic.com data: https://fonts.gstatic.com/s/poppins/v20/
CSP_CONNECT_SRC='self' https://www.google.com/recaptcha/ https://www.gstatic.com/recaptcha/ ws: wss: https://replit.com
CSP_FRAME_SRC='self' https://www.google.com/recaptcha/ https://replit.com
CSP_PREFETCH_SRC='self' https://fonts.gstatic.com
CSP_MANIFEST_SRC='self'
CSP_WORKER_SRC='self' blob:

# Security Headers
# Set to true in production
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000 # 1 year
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# CSP Report URI (optional, for receiving violation reports)
CSP_REPORT_URI=/csp-report
